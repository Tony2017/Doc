$color1 = #34495e //light
$color2 = #2c3e50 //dark

$grey1 = #161616 //darker grey
$grey2 = #262626 //middle grey
$grey3 = #3a3a3a //lighter grey

$deepBlue = #193754 //deep blue
$lightBlue = #3399cc

$textBlue = #4894b3 //text color blue
$textWhite = #cfcfcf //text color white title
$text = #a8a8a8 // plain text
$textGrey = #6f6f6f //text color grey unselected

html
  position relative
  min-height 100%

body
  background-color $grey1
  color $text
  padding 0
  margin-bottom 60px
  

a:hover, a:focus
  text-decoration underline
  outline 0

a 
  color $lightBlue
  text-decoration none
  outline 0


p
  line-height 24px
  margin-bottom 17px

table
  margin-bottom 15px

th, td
  border 1px solid $grey2
  padding 5px 15px

th
  background-color $grey2
  color #ffffff

div > p > img
  width 100%



.nav.subnav li
  &.active a
    border-left 3px solid #428bca
    margin-left -3px
  a
    padding 5px 5px

.nav > li > a > .glyphicon
  font-size 12px
  margin-left 6px


@media(max-width: 768px)
  .row .private
    margin-left 0
    padding-left 15px
    padding-top 40px
    .private--vertical-bar
      width 100%
      height 30px


/* expanded rows in the resource panels */
.list-group
  span
    p
      margin-bottom 0px
      margin-top 5px


/* footer of the resource panels */
.panel-footer
  padding 0px 20px 0px 0px
  text-align right
  a
    display block
    text-align right
    color #ADA9A9

/* styling for the private blog posts */
.panel-warning
  .panel-footer
    background-color #fcf8e3

span.glyphicon.glyphicon-lock
  color #555
  margin-right: 10px;
    
.private
  border solid 1px #999
  border-radius 3px
  margin 10px 0px 10px -45px
  padding 10px 10px 10px 45px
  position relative
  .glyphicon
    margin-left 7px
    margin-top 7px

.private--vertical-bar
  background-color #e7e7e7
  border-top-left-radius 3px
  border-bottom-left-radius 3px
  position absolute
  left 0
  top 0
  bottom 0
  width 30px


.footer
  position absolute
  bottom 0px
  width 100%
  height 60px
  padding-top 6px

  
  background-color $grey2
  border-top 1px solid $grey2

  text-align center
  p
    margin 0

/* navbar styling */

.navbar-default
  background-color $grey2
  border-color $grey2
  
.navbar-default .navbar-nav > li > a:hover
  color $textWhite
  background-color $deepBlue
  

  
.navbar-default .navbar-nav > .active > a
  background-color $deepBlue
  color $textWhite
  
 .navbar-default .navbar-nav > .active > a:hover, .navbar-default  > a:hover, .navbar-default .navbar-nav > li > a:focus
   background-color $deepBlue
   color $textGrey
   
 

.navbar-default .navbar-nav > li > a, .navbar-default .navbar-brand 
  color $textWhite

.navbar-default .navbar-brand:hover, .navbar-default .navbar-brand:focus
  color $textGrey

.wny
  height 381px
  width 283px
  
.centered_img
  height inherit
  width inherit
  max-width 100%
  display block
  margin-left auto
  margin-right auto
  
.author
  text-align right
  font-style italic

//blog colors

.panel-default > .panel-heading
  background-color $grey2
  border-color $grey2
  color $textWhite

.panel-default
  border-color $grey2

.panel-body
  background-color $grey1
  
//flat style for round corner

.panel, .panel-body, .modal-content, .panel panel-default, .list-group-item:first-child, .list-group-item:last-child, pre, .nav-tabs > li > a, .btn
  border-radius 0px
  
.panel-heading, .panel-footer
  border-top-left-radius 0px
  border-top-right-radius 0px
  border-bottom-left-radius 0px
  border-bottom-right-radius 0px
  background-color $grey2
  border-color $grey2

// API reference

.modal-body
  background-color $grey1

.modal-header 
  background-color $grey2
  color $textWhite
  border-bottom 0px solid
    
.close 
  color $textWhite
  opacity inherit
  text-shadow 0 1px 0 #000

.close:hover
  color $grey1
h1, h2, h3
  color $textWhite



hr
  border 0
  height 1px
  background $deepBlue
  background-image -webkit-linear-gradient(left, $grey1, $deepBlue, $grey1)
  background-image -moz-linear-gradient(left, $grey1, $deepBlue, $grey1)
  background-image -ms-linear-gradient(left, $grey1, $deepBlue, $grey1)
  background-image -o-linear-gradient(left, $grey1, $deepBlue, $grey1)

.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus
  -moz-border-bottom-colors none
  -moz-border-left-colors none
  -moz-border-right-colors none
  -moz-border-top-colors none
  background-color $grey1
  border-color $grey2 $grey2 transparent
  border-image none
  border-style solid
  border-width 1px
  color $textGrey
  cursor default
  outline 0

.nav-tabs
  border-bottom 1px solid $grey2

.nav > li > a:hover
  background-color $deepBlue
  border-color $grey2
  color $textWhite
  
pre
  background-color $grey1
  color $textWhite
  border: 1px solid $grey2
  
.btn:hover, .btn:focus
  color $textGrey

code 
    background-color $grey3
    border-radius 0px
    color #c7254e;
    font-size 90%
    padding 2px 4px
